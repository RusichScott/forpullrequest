import java.util.Scanner;

public class Main
{
    public static void main(String[] args) {
        
       Scanner zxc = new Scanner(System.in);
       System.out.println("Введите числo oт 0 дo 100");
       
       double num = Math.random()*100;
       int b = (int)num;
       int chislo = zxc.nextInt();
//в работу вступил Алексей и обновил( цил for был заменён на while )

       while(chislo!=b) {
                    System.out.println("Вы не угадали, пoпрoбуйте другoе числo:");
                    chislo = zxc.nextInt();
                    if (chislo == b) {
                        System.out.println("Поздравляем, вы отгадали число!");
                    }
                    
                    System.out.println(b);
                }
    }
}
